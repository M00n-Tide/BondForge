{
    "app": {
        "name": "BondForge",
        "version": "2.0.0",
        "language": "en",
        "theme": "light",
        "auto_save_interval": 300
    },
    "data": {
        "default_format": "JSON",
        "auto_save": true,
        "backup_enabled": true,
        "backup_interval": 24,
        "max_records_per_page": 50,
        "search_threshold": 0.8
    },
    "visualization": {
        "default_renderer": "simple",
        "show_hydrogens": true,
        "show_atom_labels": true,
        "default_background": "#ffffff",
        "default_bond_width": 2,
        "default_atom_size": 12
    },
    "ml": {
        "default_algorithm": "linear_regression",
        "use_gpu": false,
        "model_dir": "./models",
        "max_training_time": 3600,
        "validation_split": 0.2,
        "random_seed": 42
    },
    "collaboration": {
        "auto_refresh": true,
        "notification_enabled": true,
        "default_share_expiry": "30_days",
        "max_concurrent_users": 10,
        "conflict_resolution": "latest_wins"
    },
    "network": {
        "server_url": "https://api.bondforge.com",
        "timeout": 30,
        "retry_attempts": 3,
        "api_version": "v2"
    },
    "database": {
        "type": "sqlite",
        "path": "./data/bondforge.db",
        "connection_pool_size": 5,
        "backup_enabled": true,
        "backup_path": "./data/backup/"
    },
    "security": {
        "require_password_change": false,
        "session_timeout": 120,
        "two_factor_enabled": false,
        "password_min_length": 8,
        "password_complexity": "medium"
    },
    "plugins": {
        "directory": "./plugins",
        "auto_load": true,
        "allowed_extensions": [".dll", ".so", ".dylib"],
        "sandbox_enabled": true
    },
    "logging": {
        "level": "info",
        "file_path": "./logs/bondforge.log",
        "max_file_size": "10MB",
        "max_files": 5,
        "console_output": true
    },
